{

  "manifest_version": 2,

  "name": "VPN Extension",

  "version": "1.0",

  "permissions": [

    "tabs",

    "webRequest",

    "webRequestBlocking",

    "*://*/*"

  ],

  "background": {

    "scripts": ["background.js"]

  },

  "browser_action": {

    "default_popup": "popup.html"

  },

  "icons": {

    "16": "icon16.png",

    "48": "icon48.png",

    "128": "icon128.png"

  }

}

 

